<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}LoL-Tracker{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}" sizes="16x16">

    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
    {% endblock %}

    {% block javascript_start %}
        <script defer src="{{ asset('js/alpine.min.js') }}"></script>
    {% endblock %}
</head>
<body class="background-color">
    {% include 'layout/navigation.html.twig' %}

    {% include 'layout/flashmessenger.html.twig' %}

    <main class="mt-2 mb-3">
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </main>

    {% block javascript_end %}
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('js/alert.js') }}"></script>
    {% endblock %}
</body>
</html>
