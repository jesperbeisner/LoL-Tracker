{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1 class="page-title">
                Add Summoner
            </h1>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <div class="card card-blue">
                <div class="card-body">

                    {{ form_start(summonerForm) }}
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(summonerForm.username) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(summonerForm.notes) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(summonerForm.server) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(summonerForm.action) }}
                        </div>
                    </div>
                    {{ form_rest(summonerForm) }}
                    {{ form_end(summonerForm) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}