{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1 class="page-title">
                Players
            </h1>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <div class="card card-blue">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover text-center">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Icon</th>
                                <th scope="col">Name</th>
                                <th scope="col">Title</th>
                                <th scope="col">Blurb</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set i = 1 %}
                            {% for champion in champions %}
                                <tr>
                                    <th scope="row">{{ i }}</th>
                                    <td>
                                        <img src="https://ddragon.leagueoflegends.com/cdn/12.7.1/img/champion/{{ champion.stringId }}.png" alt="Champion Icon">
                                    </td>
                                    <td>{{ champion.name }}</td>
                                    <td>{{ champion.title }}</td>
                                    <td>{{ champion.blurb }}</td>
                                </tr>
                                {% set i = i + 1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}