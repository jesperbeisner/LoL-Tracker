{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1 class="page-title">
                Summoners
            </h1>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <div class="card card-blue">
                <div class="card-body">
                    {% if summoners is empty %}
                    <p class="text-danger text-center fw-bold">
                        No summoners have been added yet
                    </p>
                    {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover text-center">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Username</th>
                                <th scope="col">Notes</th>
                                <th scope="col">Server</th>
                                <th scope="col">Level</th>
                                <th scope="col">PUUID</th>
                                <th scope="col">Active</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set i = 1 %}
                            {% for summoner in summoners %}
                                <tr>
                                    <th scope="row">{{ i }}</th>
                                    <td>{{ summoner.username }}</td>
                                    <td>{{ summoner.notes }}</td>
                                    <td>{{ summoner.serverName }}</td>
                                    <td>{{ summoner.summonerLevel }}</td>
                                    <td>{{ summoner.lolPuuid }}</td>
                                    <td>{{ summoner.active ? '✔' : '❌' }}</td>
                                </tr>
                                {% set i = i + 1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}